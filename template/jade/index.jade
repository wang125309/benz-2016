            })();
        link(href="/static/css/index.css",rel="stylesheet",type="text/css")
    body
        audio#audio(src="/static/image/background.mp3",loop="loop")
        div.loading-background
            div.nav
                div.logo=""
                div.music=""
                div.share=""
            div.num="0%"
            div.processing=""
        div.kv
            div.nav
                div.logo=""
                div.music=""
                div.share=""
            div.title=""
            div.map-title=""
            div.kv-top
                div.close-kv-top=""
                div.tcvideo
                    | <iframe frameborder="0" width="100%" src="http://v.qq.com/iframe/player.html?vid=b0191rm086x&tiny=0&auto=0" allowfullscreen></iframe>

            div.kv-background=""
            - for (var i = 0; i < 35 ; ++i) {
            div.kvs(class="kv#{i}")=""
            - }
            - for (var i = 1; i <= 8 ; ++i) {
            div(class="city-point#{i} city-point",data-index="#{i}")=""
            - }
            div.up=""
        div.background
            div.nav
                div.logo=""
                div.music=""
                div.share=""
            div.ask-area
                div.ask-close=""
                div.ask-title=""
                div.form
                    div.line
                        div.line-cut-name
                            div.important *
                            div.word 姓名
                            input.input-dashline#name(type="text")
                        div.line-cut-sex
                            div.important *
                            div.word 性别
                            select#sex.input-dashline
                                option(value="1") 男
                                option(value="2") 女
                    div.line
                        div.important *
                        div.word 电话
                        input.input-dashline#mobile(type="number")
                    div.line
                        div.important=""
                        div.word 邮箱
                        input.input-dashline#email(type="text")
                    div.line
                        div.line-cut-name
                            div.important *
                            div.word 省份
                            select#province.input-dashline
                                option(value="0") 请选择
                                option(value="1") 广东省
                                option(value="2") 广西省
                                option(value="3") 福建省
                                option(value="4") 湖南省
                                option(value="5") 江西省
                        div.line-cut-sex
                            div.important *
                            div.word 城市
                            select.input-dashline#city=""
                    div.line
                        div.important *
                        div.word 经销商
                        select.input-dashline#mall=""
                    div.line
                        label(for="check")
                            input#check.check(type="checkbox",checked)
                            div.word 我同意以上信息提交给主办方
                    div.button-line
                        div.button#submit=""
        div.car
            div.nav
                div.logo=""
                div.music=""
                div.share=""
            div.car-wrapper1
                div.car1=""
                div.car1-title=""
            div.car-wrapper2
                div.car2=""
                div.car2-title=""
            div.close=""
        - for(var i = 1; i<=8; ++i) {
        div(class="city#{i} swiper-container")
            div.nav=""
                div.logo=""
                div.music=""
                div.share=""
            div.title=""
            div.button-area
                div.back(data-index="#{i}")=""
                div.ask=""
                div.car-icon=""
        - }       
        div(class="city submit-success")
            div.nav=""
            div.logo=""
            div.music=""
            div.share=""
            div.button-area
                div.car-icon=""
        div.share-text="" 
        script(language="javascript",src="/static/js/index.js")

